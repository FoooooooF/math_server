extends layout
block head
    style.
        body{
            background: #002152 radial-gradient(closest-corner, #004bb8, #002152);
        }
        .box{
            width:500px;
            margin:100px auto;
        }

block content
    .box.well
        h1 登录
        form
            .form-group
                label(for='exampleInputEmail1') Name
                input#exampleInputEmail1.form-control(type='text', placeholder='Name')
            .form-group
                label(for='exampleInputPassword1') Password
                input#exampleInputPassword1.form-control(type='password', placeholder='Password')
            button#login.btn.btn-block  登录

block foot
    script.
        $(document).ready(function () {
            $("#login").on("click",function(e){
                e.preventDefault();
                location.href="admin/mathematic";
            })
        });